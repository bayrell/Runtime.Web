namespace Runtime.Web;

use Runtime.Serializer;
use Runtime.Serializer.MapType;
use Runtime.Serializer.StringType;
use Runtime.Web.RouteInfo;
use Runtime.Web.RenderContainer;


class RouteModel extends RouteInfo
{
	string model = "";
	Dict model_params = null;
	
	
	/**
	 * Process frontend data
	 */
	void serialize(Serializer serializer)
	{
		parent(serializer);
		serializer.addType("model", new StringType());
		serializer.addType("model_params", new MapType());
	}
	
	
	/**
	 * Render route
	 */
	async void render(RenderContainer container)
	{
		/* Check page model */
		if (this.model == "") return;
		if (not rtl::classExists(this.model)) return;
		
		/* Render page model */
		await container.renderPageModel(this.model, this.model_params);
	}
}