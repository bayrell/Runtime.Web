namespace Runtime.Web.Hooks;

use Runtime.BaseModel;
use Runtime.Entity.Hook;
use Runtime.Hooks.RuntimeHook;
use Runtime.Web.RenderContainer;
use Runtime.Web.RouteInfo;
use Runtime.Web.RouteModel;
use Runtime.Web.Hooks.AppHook;


class PageNotFound extends RuntimeHook
{
	string model = "";
	string layout_name = "default";
	
	
	/**
	 * Hook factory
	 */
	static Hook hook(string model, string layout="default")
	{
		return new Hook(static::getClassName(), {"model": model, "layout": layout});
	}
	
	
	/**
	 * Init params
	 */
	void initParams(Dict params)
	{
		parent(params);
		
		if (params.has("model")) this.model = params.get("model");
	}
	
	
	/**
	 * Register hooks
	 */
	void register_hooks()
	{
		parent();
		this.register(AppHook::FIND_ROUTE_AFTER, "routeNotFound");
		/*this.register(AppHook::ROUTE_AFTER, "renderPageNotFound");*/
	}
	
	
	/**
	 * Route not found
	 */
	async void routeNotFound(Map params)
	{
		RenderContainer container = params.get("container");
		if (container.route) return null;
		
		/* Set route */
		container.route = new RouteModel
		{
			"model": this.model,
			"layout": this.layout_name,
		};
	}
	
	
	/**
	 * Render page not found
	 */
	async void renderPageNotFound(Map params)
	{
		RenderContainer container = params.get("container");
		if (container.response) return;
		
		/* Create default layout */
		if (container.layout == null)
		{
			container.createLayout(this.layout_name);
		}
		
		/* Get page model */
		BaseModel page_model = container.layout.getPageModel();
		if (page_model) return;
		
		await container.renderPageModel(this.model);
	}
}