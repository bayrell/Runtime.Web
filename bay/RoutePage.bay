namespace Runtime.Web;

use Runtime.BaseModel;
use Runtime.Serializer.ObjectType;
use Runtime.Serializer.StringType;
use Runtime.Web.RouteInfo;
use Runtime.Web.RenderContainer;


class RoutePage extends RouteInfo
{
	string page = "";
	
	
	/**
	 * Process frontend data
	 */
	static void serialize(ObjectType rules)
	{
		parent(rules)
		rules.addType("page", new StringType());
	}
	
	
	/**
	 * Render route
	 */
	async void render(RenderContainer container)
	{
		container.layout.current_page_model = "page_model";
		BaseModel page_model = container.layout.addWidget(classof BaseModel, {
			"widget_name": "page_model",
			"component": this.page,
		});
		
		if (this.data)
		{
			string title = this.data.get("title");
			bool is_full_title = this.data.get("full_title", false);
			container.layout.setPageTitle(title, is_full_title);
		}
	}
}