namespace Runtime.Web;

use Runtime.BaseObject;
use Runtime.Exceptions.ApiError;
use Runtime.Exceptions.RuntimeException;
use Runtime.Serializer.BaseType;
use Runtime.Serializer.MapType;
use Runtime.Web.ApiRequest;
use Runtime.Web.ApiResult;


class BaseApi extends BaseObject
{
	string action = "";
	ApiRequest request = null;
	ApiResult result = new ApiResult;
	Map data = null;
	Map storage = null;
	
	
	/**
	 * Returns api name
	 */
	static string getApiName() => "";
	
	
	/**
	 * Returns data rules
	 */
	void getDataRules(MapType rules)
	{
	}
	
	
	/**
	 * Set action
	 */
	void setAction(string action)
	{
		this.action = action;
	}
	
	
	/**
	 * Set request
	 */
	void setRequest(ApiRequest request)
	{
		this.request = request;
		this.storage = request.storage;
	}
	
	
	/**
	 * Filter rules
	 */
	Map filter(Map data, BaseType rules, Vector error = [])
	{
		Map data = rules.filter(data, error);
		if (error.count() > 0)
		{
			throw new ApiError(this.result.fail({
				"message": "Field exception",
				"error": TypeError::getMessages(error),
			}));
		}
		return data;
	}
	
	
	/**
	 * Filter data
	 */
	void filterData()
	{
		Vector errors = [];
		MapType rules = new MapType();
		this.getDataRules(rules);
		this.data = this.filter(this.request.data, rules, errors);
	}
	
	
	/**
	 * Set success
	 */
	void success(Dict data = null)
	{
		return this.result.success(data);
	}
	
	
	/**
	 * Setup exception
	 */
	ApiResult exception(RuntimeException e)
	{
		return this.result.exception(e);
	}
	
	
	/**
	 * Setup fail
	 */
	ApiResult fail(var data = null)
	{
		return this.result.fail(data);
	}
}