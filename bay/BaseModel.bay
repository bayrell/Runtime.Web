namespace Bayrell.CloudOS;

use Runtime.lib;
use Runtime.BaseObject;
use Runtime.Web.RenderContainer;
use Runtime.Web.RouteList;


class BaseModel extends BaseObject
{
	RenderContainer container = null;
	string widget_name = "";
	Map widgets = {};
	
	
	/**
	 * Create model
	 */
	void constructor(RenderContainer container)
	{
		parent();
		this.container = container;
	}
	
	
	/**
	 * Add widget
	 */
	void addWidget(BaseModel new_widget)
	{
		string widget_name = new_widget.widget_name;
		this.widgets.set(widget_name, new_widget);
	}
	
	
	/**
	 * Init model
	 */
	async void init()
	{
	}
	
	
	/**
	 * Load data
	 */
	async void loadData()
	{
	}
	
	
	/**
	 * Export data
	 */
	Map exportData()
	{
		return {
		};
	}
	
	
	/**
	 * Returns url
	 */
	static string url(string route_name, Dict route_params = null)
	{
		RouteList routes = @.provider(classof RouteList);
		return routes.url(route_name, route_params);
	}
}